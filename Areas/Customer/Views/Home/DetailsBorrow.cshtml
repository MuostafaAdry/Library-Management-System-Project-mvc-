@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Borrow Book";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Covers/@Model.Cover" alt="Book Cover" class="img-fluid rounded shadow"
                 style="height: 500px; width: 100%; object-fit: cover; transition: 0.3s; cursor: pointer;"
                 onmouseover="this.style.transform='scale(1.03)'"
                 onmouseout="this.style.transform='scale(1)'" />
        </div>

        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p><strong>Author:</strong> @Model.Author.FullName</p>
            <p><strong>Category:</strong> @Model.Category.Name</p>
            <p><strong>Publisher:</strong> @Model.Publisher.Name</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Published:</strong> @Model.PublishedDate.ToString("yyyy-MM-dd")</p>
            <p><strong>Total Copies:</strong> @Model.TotalCopies</p>
            <p><strong>Available Copies:</strong> @Model.AvailableCopies</p>

            <form asp-action="Borrow" method="post">
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="mb-3">
                    <label for="NumCopy" class="form-label">Number Of Copies</label>
                    <input type="number" id="NumCopy" name="copyNum" class="form-control w-25" required min="1" />
                </div>

                <div class="mb-3">
                    <label for="returnDate" class="form-label">Return Date</label>
                    <input type="date" id="returnDate" name="returnDate" class="form-control w-50" required
                           min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <button type="submit" class="btn btn-success"> Borrow</button>
            </form>
        </div>
    </div>
</div>
